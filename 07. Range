# 03 - range()
# Permite crear una secuencia de números. puede se útil para for, pero no solo para eso

print("\nrange():")

#generado una secuencia de números del 0 al 9
#for num in range(10):
 #   print(num)

#range(inicio,fin)
#for num in range(5,10):
#   print(num)
    
#range(inicio, fin, paso)
#for num in range(0,100,5):
#   print(num)
    
for num in range(-5,0):
    print(num)
 
 #tambien se puede hacer una cuenta regresiva
for num in range(10, -1, -1):
    print(num)
  
nums = range(10)
list_of_nums = list(nums)
print(list_of_nums)

print("\n uso distinto de range")

for _ in range(5): #el guin bajo "_" sirve para expresar que no se creará una variable
    print(_)
    
    
print("\nEjercicio 1:")
#imprime todos los números impares entre 1 y 20(inclusive) usando un bucle for y range()
for num in range(1,20,2):
    print(num)

print("\nEjercicio 2:")
#Imprime los multiplos de 5 desde 5 hasta 50 (inclusive) usando bucle for y range()

for num in range(5,50,5):
    print(num)

print("\nEjercicio 3:")
#imprime los números del 10 al 1 (inclusive) en orden inverso usando bucle for y range()
for num in range(10,0,-1):
    print(num)
    
print("\nEjercicio 4:")
#calcula la suma de los números del 1 al 10 (inclusive) usando un bucle fro y range
suma = 0
for num in range(1,100):
    suma += 1
print(f"La suma de 1 a 100 es {suma}")

print("\nEjercicio 5:")
#pide al usuario que introduzca un número.
#imprime la tabla de multiplicar de ese número (del 1 al 10) usando un bucle for

num = int(input("Introduce un número: "))

for multi in range(1,11):
    tabla = multi * num
    print(f"{num} X {multi} = {tabla}")
